{% extends 'base.html.twig' %}

{% block title %}Reservatie index{% endblock %}

{% block body %}
    <h1>Reservatie index</h1>

    <table class="table" style="color: white">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datum_tijd</th>
                <th>Aantal</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservatie in reservaties %}
            <tr>
                <td>{{ reservatie.id }}</td>
                <td>{{ reservatie.datumTijd ? reservatie.datumTijd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reservatie.aantal }}</td>
                <td>
                    <a href="{{ path('reservatie_show', {'id': reservatie.id}) }}">show</a>
                    <a href="{{ path('reservatie_edit', {'id': reservatie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reservatie_new') }}">Create new</a>
{% endblock %}
